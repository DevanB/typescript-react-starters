{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"]
    },
    "jsx": "preserve",
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}

