{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"]
    },
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ]
}
